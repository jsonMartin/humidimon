html
  head
    title=humidimon
    style.
      h1, h2 {
        margin: 0;
      }
      button {
        color: #fff ;
        text-transform: uppercase;
        text-decoration: none;
        background: purple;
        padding: 20px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
        border: none;
        transition: all 0.4s ease 0s;
      }
      button:hover {
        background: #434343;
        letter-spacing: 1px;
        -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
        -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
        box-shadow: 5px 40px -10px rgba(0,0,0,0.57);
        transition: all 0.4s ease 0s;
      }
      .on {
        font-size: 80px;
        margin: 0 auto;
        color: green;
        width: 90%;
      }
      .off {
        margin: 0 auto;
        font-size: 80px;
        color: red;
        width: 90%;
      }
      .lcd {
        width: 300px;
        vertical-align: center;
        background-color: lightgrey;
        border-radius: 10px;
        padding: 5px;
        zoom: 200%;
        margin-left: 5px;
      }
      body {
        width: 100%;
        margin: 0 auto;
      }

  body
    h1 Temperature: #{temperature}<span>&#176;</span>F
    h1 Humidity: #{humidity}%
    hr
    em Last updated: #{stats.lastUpdated}
    ul
      each stat, name in stats
        li #{name}: #{stat}
    hr
    div(class='lcd')
      if lcdEnabled
        div(class='on') &#128161;ON
      else
        div(class='off') &#128161;OFF
      a(href='/led/off')
        button TURN OFF LED
      a(href='/led/on')
        button TURN ON LED
